					"name": "Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Store JWT token', function () {\r",
									"    if (![200, 201].includes(pm.response.code)) {\r",
									"        console.warn('Resposta não foi sucesso.');\r",
									"        return;\r",
									"    }\r",
									"\r",
									"    const response = pm.response.json();\r",
									"\r",
									"    if (typeof response.token === 'string' && response.token.length > 0) {\r",
									"        pm.collectionVariables.set('token', response.token);\r",
									"        console.log('Token salvo na collection.');\r",
									"    } else {\r",
									"        console.warn('Token inválido ou ausente.');\r",
									"    }\r",
									"});"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
